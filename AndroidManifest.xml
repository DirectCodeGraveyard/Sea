<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.directcode.neo.sea" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <permission
        android:name="org.directcode.neo.sea.PROVIDE_MODULE"
        android:description="@string/perm_provide_module_desc"
        android:label="@string/perm_provide_module_label" />

    <application
        android:name=".core.SeaApplication"
        android:allowBackup="true"
        android:icon="@android:drawable/ic_menu_more"
        android:label="@string/app_name" >
        <activity
            android:name=".ui.ControllerActivity"
            android:enabled="true"
            android:exported="true"
            android:label="Sea" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".core.SeaService"
            android:enabled="true" />

        <receiver
            android:name=".core.BootReceiver"
            android:enabled="true"
            android:label="StartSeaOnBoot" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name=".core.PackageReceiver"
            android:enabled="true"
            android:label="PackageReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".ui.FirstRunActivity"
            android:label="@string/title_activity_first_run"
            android:theme="@android:style/Theme.Material.NoActionBar">
        </activity>
    </application>

</manifest>
